{
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.cjs", ".storybook/**/*.ts", ".storybook/**/*.tsx"],

  "exclude": ["node_modules", "storybook_static", "dist", "cdk.out"],

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      ".storybook/*": [".storybook/*"]
    },

    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "noEmit": true,
    "strict": true,
    "checkJs": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "noUnusedParameters": true,
    "useDefineForClassFields": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  }
}
